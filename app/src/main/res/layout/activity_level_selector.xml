<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"

    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.awesome.scott.stop.LevelSelector"
    android:background="@drawable/background_gradient"
    android:id="@+id/level_selector">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Level"
        android:id="@+id/title"
        android:textSize="30sp"
        android:textColor="#E53935"
        android:layout_marginBottom="30dp"
        android:typeface="monospace"
        android:textStyle="bold"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Single Stop x1"
        android:textSize="20sp"
        android:padding="20dp"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:enabled="false"
        android:id="@+id/singleStopx1"
        android:onClick="level100Pressed"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Single Stop x2"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="20dp"
        android:enabled="false"
        android:id="@+id/singleStopx2"
        android:onClick="level200Pressed"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Double Stop x1"
        android:textSize="20sp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:enabled="false"
        android:id="@+id/doubleStopx1"
        android:onClick="doubleStopButtonPressed"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Double Stop x2"
        android:textSize="20sp"
        android:padding="20dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:enabled="false"
        android:id="@+id/doubleStopx2"
        android:onClick="doubleStopx2ButtonPressed"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Custom"
        android:textSize="20sp"
        android:padding="20dp"
        android:id="@+id/customButton"
        android:textAllCaps="false"
        android:onClick="customButtonClicked"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerLevelSelectorId"
        android:layout_gravity="center_horizontal">
    </com.google.android.gms.ads.AdView>


</LinearLayout>
