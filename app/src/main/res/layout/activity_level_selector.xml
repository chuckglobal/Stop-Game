<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"

    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.awesome.scott.stop.LevelSelector"
    android:background="@drawable/background_gradient"
    android:id="@+id/level_selector">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Level"
        android:id="@+id/title"
        android:textSize="30sp"
        android:textColor="#E53935"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        ads:layout_constraintBottom_toTopOf="@+id/singleStopx1"
        ads:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        ads:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Single Stop x1"
        android:textSize="20sp"
        android:padding="20dp"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:enabled="false"
        android:id="@+id/singleStopx1"
        android:onClick="level100Pressed"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        ads:layout_constraintBottom_toTopOf="@+id/singleStopx2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        ads:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Single Stop x2"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="20dp"
        android:enabled="false"
        android:id="@+id/singleStopx2"
        android:onClick="level200Pressed"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        ads:layout_constraintBottom_toTopOf="@+id/doubleStopx1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        ads:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Double Stop x1"
        android:textSize="20sp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:enabled="false"
        android:id="@+id/doubleStopx1"
        android:onClick="doubleStopButtonPressed"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        ads:layout_constraintBottom_toTopOf="@+id/doubleStopx2"
        ads:layout_constraintRight_toRightOf="@+id/singleStopx2"
        tools:layout_constraintLeft_creator="1"
        ads:layout_constraintLeft_toLeftOf="@+id/singleStopx2" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Double Stop x2"
        android:textSize="20sp"
        android:padding="20dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textAllCaps="false"
        android:enabled="false"
        android:id="@+id/doubleStopx2"
        android:onClick="doubleStopx2ButtonPressed"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        ads:layout_constraintBottom_toTopOf="@+id/customButton"
        ads:layout_constraintRight_toRightOf="@+id/doubleStopx1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        ads:layout_constraintLeft_toLeftOf="@+id/doubleStopx1" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Custom"
        android:textSize="20sp"
        android:padding="20dp"
        android:id="@+id/customButton"
        android:textAllCaps="false"
        android:onClick="customButtonClicked"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintRight_toRightOf="@+id/doubleStopx2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="157dp"
        ads:layout_constraintLeft_toLeftOf="@+id/doubleStopx2" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerLevelSelectorId"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="51dp"
        ads:layout_constraintTop_toBottomOf="@+id/customButton"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        ads:layout_constraintLeft_toLeftOf="parent"></com.google.android.gms.ads.AdView>


</android.support.constraint.ConstraintLayout>
