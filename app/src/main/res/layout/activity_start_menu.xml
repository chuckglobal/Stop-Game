<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.awesome.scott.stop.StartMenu"
    android:background="@color/appBackgroundColor"
    android:id="@+id/start_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="4"
        android:background="@drawable/background_gradient_start_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Menu_Title"
        android:id="@+id/title"
        android:textSize="30sp"
        android:textColor="#E53935"
        android:layout_marginBottom="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="@string/stop"
        android:paddingRight= "100dp"
        android:paddingLeft="100dp"
        android:textSize="25sp"
        android:onClick="moveToLevelSelector"
        android:textColor="#ff000000" />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="@string/leaderboard"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:onClick="leaderboardButtonPressed"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#4CAF50">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Total Attempts"
            android:textSize="30sp"
            android:textColor="#010101" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingLeft="10dp"
            android:id="@+id/totalAttemptsView"
            android:textSize="70sp"
            android:textColor="#E64A19" />

    </LinearLayout>

</LinearLayout>
