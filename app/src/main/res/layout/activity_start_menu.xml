<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.awesome.scott.stop.StartMenu"
    android:background="@color/appBackgroundColor"
    android:id="@+id/start_menu">


        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background_gradient_start_menu"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        ads:layout_constraintRight_toRightOf="@+id/start_menu"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        ads:layout_constraintLeft_toLeftOf="@+id/start_menu"
        ads:layout_constraintTop_toTopOf="@+id/start_menu"
        android:id="@+id/constraintLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Menu_Title"
            android:id="@+id/title"
            android:textSize="30sp"
            android:textColor="#E53935"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            ads:layout_constraintBottom_toTopOf="@+id/button2"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="51dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:text="@string/stop"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:textSize="25sp"
            android:onClick="moveToLevelSelector"
            android:textColor="#ff000000"
            android:id="@+id/button2"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            ads:layout_constraintBottom_toTopOf="@+id/button"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="40dp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:text="@string/leaderboard"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:paddingLeft="75dp"
            android:paddingRight="75dp"
            android:onClick="leaderboardButtonPressed"
            android:id="@+id/button"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            ads:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="284dp" />


    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:gravity="center"
        android:background="#EEEEEE"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="150dp"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Attempts"
            android:textSize="30sp"
            android:textColor="#010101"
            android:id="@+id/textView5"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintHorizontal_bias="0.25"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingLeft="10dp"
            android:id="@+id/totalAttemptsView"
            android:textSize="70sp"
            android:textColor="#E64A19"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintHorizontal_bias="0.85"
            ads:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        ads:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        ads:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

</android.support.constraint.ConstraintLayout>
