<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awesome.scott.stop" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".StartMenu"
            android:label="StartMenu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="MainActivity" />
        <activity
            android:name=".LevelSelector"
            android:label="LevelSelector" >
        </activity>

        <activity
            android:name=".DoubleCounterActivity"
            android:label="@string/title_activity_double_counter" >
        </activity>

        <activity
            android:name=".Leaderboard"
            android:label="@string/title_activity_leaderboard" >
        </activity>

        <activity
            android:name=".CustomStopLevel"
            android:label="@string/title_activity_custom_stop_level" >
        </activity>

        <activity
            android:name=".CustomLevel"
            android:label="@string/title_activity_custom_level" >
        </activity>

        <activity
            android:name=".LoadingActivity"
            android:label="Stop" >

        </activity>
    </application>

</manifest>
